<h1>Listing animals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals_ranked.each do |animal| %>
  <tr>
    <td><%= animal.name %></td>
    <td><%= image_tag(animal.image.url(:thumb)) %></td>
	<td> <%= animal.wins.count %> Wins &#47; <%= animal.losses.count %> Losses (<%= (animal.win_percentage * 100).round(1) %>% wins) (<%= animal.battles_count %> battles)</td>
    <td><%= link_to 'Show', animal %></td>
  </tr>
<% end %>
</table>

</br>


<% if Rails.application.config.comments_enabled %>
<div class="comment" 
<% if local_assigns[:hide_at_first] %>
style="display: none;"
<% end %>
>

	<div class="content_and_metadata">	
		<div class="content">
			<span class="comment_text">
				<%= comment.comment %> 
			</span>
		</div>
		<div class="metadata">
			<span class="user_name"><%= comment.user_name %> </span><span class="time"><%= time_ago_in_words comment.created_at %> ago </span>
		</div>
	</div>

	<div class="vote_button_panel <%= vote_status(comment) %>" data-comment_id="<%= comment.id %>">
	<div class="vote_button vote_up"></div>
	<div class="vote_button vote_down"></div>
	</div>
</div>
<% end %>